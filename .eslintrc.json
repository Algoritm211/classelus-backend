{
  "env": {
    "node": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": [
    "google"
  ],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "object-curly-spacing": ["error", "always"],
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "quote-props": ["error", "as-needed"],
    "max-len": ["error", { "code": 210 }],
    "require-jsdoc": "off",
    "no-invalid-this": "off",
    "linebreak-style": "off",
    "no-trailing-spaces": "off",
    "semi": ["error", "never"]}
}
